<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Switch -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 5: Status"
        android:textStyle="bold"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ativo"
        android:checked="true"
        android:enabled="true"/>

    <!-- Checkbox -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 6: Verificações"
        android:textStyle="bold"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificado"
        android:checked="true"
        android:enabled="true"/>

    <!-- Radio Buttons -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 7: Categoria"
        android:textStyle="bold"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opção A"
            android:checked="true"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 8: Nível"
        android:textStyle="bold"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="70"
        android:enabled="false"/>

    <!-- Toggle Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 9: Estado"
        android:textStyle="bold"/>
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:enabled="true"/>

    <!-- Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 10: Seleção"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Calendar View Summary -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 11: Data"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/01/2024"
        android:enabled="false"/>

    <!-- Time Display -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 12: Horário"
        android:textStyle="bold"/>
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <!-- Image with Caption -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 13: Imagem"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_menu_gallery"/>

    <!-- Progress Indicator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 14: Status"
        android:textStyle="bold"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleSmall"/>

    <!-- Chips -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 15: Etiquetas"
        android:textStyle="bold"/>
    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etiqueta 1"/>
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etiqueta 2"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- Badge -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 16: Indicador"
        android:textStyle="bold"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificações"
        app:icon="@android:drawable/ic_popup_reminder"
        app:iconGravity="textStart"
        android:enabled="true"/>

    <!-- Card View -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 17: Card"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conteúdo do Card"/>
    </androidx.cardview.widget.CardView>

    <!-- Linear Progress -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 18: Progresso Linear"
        android:textStyle="bold"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="60"/>

    <!-- Circular Progress -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campo 19: Progresso Circular"
        android:textStyle="bold"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="80"/>

    <!-- Continue with more read-only fields using different components -->

</LinearLayout>
